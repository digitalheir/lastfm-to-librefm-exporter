{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "esnext.asynciterable",
      "dom"
    ],
    "target": "es5",
    "strictNullChecks": false,
    "outDir": "ts-dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "keyofStringsOnly": true
}