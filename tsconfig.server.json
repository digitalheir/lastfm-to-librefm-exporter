{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es2017",
      "es2016.array.include",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": [
    "src/server/server.ts",
    "src/scripts/rechtspraak/index-docs.ts",
    "src/types/*.ts",
    "src/views/**/*",
    "src/app/**/*"
  ]
}